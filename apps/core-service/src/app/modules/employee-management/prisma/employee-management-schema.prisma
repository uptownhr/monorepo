generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x", "darwin-arm64"]
  output        = "./generated/employee-management-prisma.client"
}

datasource db {
  provider = "postgresql"
  url      = env("EMPLOYEE_MANAGEMENT_DATABASE_URL")
}

model CompanyPerson {
  id                     String                   @id
  companyId              String
  EmployeeVoicesFeedback EmployeeVoicesFeedback[]

  @@map("company_person_profile")
}

model EmployeeVoicesFeedback {
  id              Int           @id @default(autoincrement())
  feedback        String
  anonymous       Boolean       @default(true)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  companyPersonId String
  companyPerson   CompanyPerson @relation(fields: [companyPersonId], references: [id])

  @@map("employee_voices_feedback")
}
